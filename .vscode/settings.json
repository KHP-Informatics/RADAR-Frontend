{
  "editor.formatOnSave": true,
  "tslint.autoFixOnSave": true,
  "prettier.printWidth": 80,
  "prettier.semi": false,
  "prettier.singleQuote": true,
  "prettier.javascriptEnable": ["javascript", "javascriptreact"],
  "prettier.typescriptEnable": ["typescript", "typescriptreact"],
  "prettier.jsonEnable": ["json"],
  "TodoParser": {
    "include": ["js", "html", "css", "scss", "ts"],
    "folderExclude": [".vscode", "node_modules", "coverage", "dist"],
    "markers": ["TODO:", "NOTE:", "FIXME:"]
  },
  "sortImports.onSave": true,
  "eslint.enable": false,
  "html.format.enable": false,
  "angular-template-formatter.indentWidth": 2
}
